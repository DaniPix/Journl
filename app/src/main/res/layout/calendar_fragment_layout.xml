<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical">

    <ImageView
        android:id="@+id/calendarBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:layout_margin="10dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:id="@+id/currentDay"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/calendar"
        app:layout_constraintLeft_toLeftOf="@id/calendar"
        app:layout_constraintRight_toRightOf="@id/calendar"
        app:layout_constraintTop_toTopOf="@id/calendar">

        <TextView
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:text="January"/>

        <TextView
            android:id="@+id/day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/month"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="100sp"
            android:text="14"/>

        <TextView
            android:id="@+id/weekday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/day"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:text="Saturday"/>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/openCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/arrow_down_float"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>